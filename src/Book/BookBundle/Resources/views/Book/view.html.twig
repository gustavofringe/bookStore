{% extends "BookBookBundle::layout.html.twig" %}
{% block title %}Livres du monde{% endblock %}
{% block body %}
    <h2>{{ product.title }}</h2>
    <div class="row">

            <div class="col-md-6 offset-3 mt-5 p-2">
                <div class="card p-4" style="width: 100%; height: 100%">
                    <div class="card-body">
                        <p>{{ product.resume |slice(0,800)}}</p>
                        <p class="mt-3">{{ product.author }}</p>
                        <p class="mt-3">{{ product.releaseDate|date("m/d/Y") }}</p>
                    </div>
                </div>
            </div>

    </div>
{% endblock %}